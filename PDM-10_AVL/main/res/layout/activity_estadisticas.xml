<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".EstadisticasActivity">

    <TextView
        android:id="@+id/tvNumeroIndividuos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de Individuos: " />

    <TextView
        android:id="@+id/tvPromedioEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Promedio de Edad: " />

    <TextView
        android:id="@+id/tvJoven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Más Joven: " />

    <TextView
        android:id="@+id/tvViejo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Más Viejo: " />

    <TextView
        android:id="@+id/tvPorProfesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Por Profesión: " />

</LinearLayout>
